<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Para definir el tipo de ñetra para todo el proyecto-->
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="buttonStyle">@style/boton_normal</item>
    </style>

    <!-- las unidades sp son para tamaño de texto -->
    <style name="supertexto" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/raleway_black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorSuperTexto</item>

    </style>

    <style name="boton_normal" parent="android:Widget.Button">
        <item name="android:background">@color/colorBottom</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorBotonTexto</item>
    </style>

    <style name="item_titulo" parent="android:Widget.TextView">

        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textboton" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
