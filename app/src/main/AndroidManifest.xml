<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.isil.tiendaperu">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_wolf"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_wolf"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".CrearCuentaActivity"
            android:label="@string/crear_cuenta" />
        <activity
            android:name=".IniciarSesionActivity"
            android:label="@string/inicia_sesion" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AcercadeActivity"
            android:label="@string/acerca_de" />
        <activity
            android:name=".TerminosActivity"
            android:label="@string/terminos" />
        <activity
            android:name=".AyudaActivity"
            android:label="@string/ayuda" />
        <activity
            android:name=".EscritorioActivity"
            android:label="@string/title_activity_escritorio"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>